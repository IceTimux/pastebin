
<% unless @pastes.empty? %>
<div class="box">
  <div class="content index" style="overflow-x:auto;">
    <table>
      <thead>
        <tr>
          <th style="text-align: left">
          Title
        </th>
        <th style="text-align: left; width: 160px">
          When
        </th>
      </tr>
    </thead>
    <tbody>
      <% @pastes.each do |paste|  %>
        <tr>
          <td>
            <a href="/edit/<%= paste.id %>"><%= paste.title %></a>
          </td>
          <td>
            <%= simple_format(paste.created_at) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
<% else %>
  <div class="box">
    <div class="content">
      No pastes found.
    </div>
  </div>
<% end %>
