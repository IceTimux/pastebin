<form method="POST" action="/update/<%= @paste.id %>" id="paste-form">

<div class="box header-box">
  <div class="content">
  <input type="text" name="title" class="no-highlight edit-input" value="<%= @paste.title %>" required>
      <br>
      <span class="date">Created at <%= db_format(@paste.created_at) %>, </span>
      <span class="date">Updated at <%= db_format(@paste.updated_at) %></span>
      <br>
      <a href="/<%= @paste.id %>" class="action-link">View</a>
      |
      <a href="/markdown/<%= @paste.id %>" class="action-link">View Markdown</a>
      |
      <a href="" class="action-link" onclick="submitPasteForm(event)">Save</a>
      <div class="pull-right">
        <a href="" class="action-link" onclick="deletePaste(event, <%= @paste.id %>)">
          Delete
        </a>
      </div>
  </div>
</div>
<br>
  <textarea name="body" class="edit-textarea green-bg" required><%= @paste.body %></textarea>
</form>