{
  "name": "pastebin",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate:up"
  },
  "env": {
    "PASSWORD": {
      "required": true
    },
    "USERNAME": {
      "required": true
    },
    "APP_NAME": {
      "required": false
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "13"
      }
    } 
  ]
}